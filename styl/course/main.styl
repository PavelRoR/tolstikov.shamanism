#main
	width 100%
	padding 0 0 60px
	background-color: rgb(139,152,193)
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
#header
	padding 20px 0
	margin-bottom: 5px
	overflow hidden
#logo
	float left
	width 296px
	height auto
.contacts
	float right
.contact
	display: inline-block
	margin-left 15px
	padding-left: 35px
	background-repeat no-repeat
	background-position: left center
	line-height: 26px
	&:focus
		text-decoration: none
	&:hover
		text-decoration: underline
.contact_email
	margin-left: 0
	color #001381
	background-image url(../img/mail_img.png)
	padding-left: 39px
.contact_skype
	background-image url(../img/skype_img.png)
.contact_tel
	background-image url(../img/phone_img_white.png)
.contact_tel:last-of-type
	background-image url(../img/phone_img_blue.png)
	color #001381
.pre
	small
		display block
.main_title
	font-size: 34px;
	font-family: "AvenirNextCyrBold", sans-serif;
	line-height: 1.333;
	margin 20px 0 25px
.main_subtitle
	line-height: 1.556;
	margin-bottom: 25px
	font-size: 24px
.a_n_d
	font-size: 18px
	line-height: 1.556;
	margin-bottom: 10px
	span
		font-family: "AvenirNextCyrBold", sans-serif;
		display: inline-block
	&:last-child
		margin-bottom: 0
.button_main
	margin: 40px auto 0