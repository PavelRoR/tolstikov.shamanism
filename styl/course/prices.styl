#prices
	width 100%
	padding 70px 0
	background-color: #000000
	background-image url(../img/for_bg.png)
	background-repeat no-repeat
	background-position: center
	text-align: center
.general_title_prices
	color #fff
.packet
	width 100%
	max-width 360px
	margin 0 auto 25px
	border: 1px solid #fff
	background-color: rgba(0,0,0,.9)
	color #fff
	padding 20px
.packet_head
	padding-bottom: 20px
	display: table
	height 77px
.packet_head_title
	display: table-cell
	vertical-align: middle
	font-size: 22px
	font-family: "AvenirNextCyrBold", sans-serif;
	span
		display: inline-block
.packet_body
	padding 20px 0
	border-top: 1px solid rgba(255,255,255,.8)
	border-bottom: 1px solid rgba(255,255,255,.8)
.packet_body_text
	font-size: 20px
.more_button
	font-size: 16px
	display inline-block
	border-bottom: 1px dashed
	color #aaa
	margin: 5px 0 20px
	cursor pointer
	&:last-of-type
		margin-bottom: 0
.packet_footer
	padding-top: 20px
.cost
	font-size: 20px
	margin-bottom: 20px
	&:last-child
		margin-bottom: 0
	span
		display block
		font-size: 26px
		font-family: "AvenirNextCyrBold", sans-serif;
.cost_full
	span
		text-decoration: line-through
.cost_sale
	color red
.cost_today 
	color #1AF91A
.prepaymant_title
	color red
	font-size: 30px
	font-family: "AvenirNextCyrBold", sans-serif;
.prepayment_text
	color #fff
	font-size: 20px
	margin 15px 0 25px
.timer_title
	color #fff
	font-size: 30px
	font-family: "AvenirNextCyrBold", sans-serif;
	margin 40px 0 20px
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 40px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 24px;
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 40px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #fff
.flip-clock-wrapper ul li a div div.inn
	color: red
	background-color: #fff