#videos
	width 100%
	padding 70px 0
	background-color: rgb(147,159,196)
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.video_tabs
	width 100%
	max-width 560px
	margin 0 auto 30px
.video_tabs_buttons
	width 100%
	text-align: center
	margin-bottom: 15px
	li
		display: inline-block
		margin 0 5px
		list-style none
		height 35px
		line-height 35px
		width 100%
		max-width 100px
		text-align: center
		background-color: #aaa
		color: #000
		text-decoration: none
		cursor pointer
		transition: all .2s ease-out
		&:focus
			text-decoration: none
			color #fff
		&:hover
			text-decoration: none
			color #fff
			background-image: linear-gradient( 180deg, rgb(224,26,16) 0%, rgb(171,28,21) 100%);
			box-shadow: 0px 3px 15.8px 6.2px rgba(0, 0, 0, 0.1)
		&.active
			background-color: rgb(218,30,20)
			background-image: linear-gradient( 0deg, rgb(224,26,16) 0%, rgb(171,28,21) 100%);
			box-shadow: 0px 3px 15.8px 6.2px rgba(0, 0, 0, 0.1);
			color #fff
